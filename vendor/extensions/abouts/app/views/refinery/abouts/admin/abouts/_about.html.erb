<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(about) -%>">
  <span class='title'>
    <%= about.title %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.abouts_about_path(about), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_abouts_admin_about_path(about), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.abouts_admin_about_path(about), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: about.title)}}  ) %>
  </span>
</li>
